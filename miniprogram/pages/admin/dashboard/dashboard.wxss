.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.header {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-card .num {
  font-size: 48rpx;
  font-weight: bold;
  color: #1296db;
  display: block;
  margin-bottom: 10rpx;
}

.stat-card .label {
  font-size: 28rpx;
  color: #666;
}

.menu-list {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item .iconfont {
  font-size: 40rpx;
  color: #1296db;
  margin-right: 20rpx;
}

.menu-item .text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-item .badge {
  background: #ff6b6b;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.menu-item .icon-right {
  font-size: 32rpx;
  color: #999;
}

.chart-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.time-range {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
}

.chart-container {
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #999;
}