.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.user-card {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  filter: blur(10rpx);
  transform: scale(1.1);
}

.user-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.vip-tag {
  margin-top: 10rpx;
  padding: 4rpx 20rpx;
  background: linear-gradient(90deg, #FFD700, #FFA500);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.stats-bar {
  display: flex;
  background: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 2rpx solid #f0f0f0;
}

.stat-item:last-child {
  border-right: none;
}

.num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.menu-list {
  background: #fff;
  border-radius: 20rpx;
  margin: 0 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.iconfont {
  font-size: 40rpx;
  color: #1296db;
  margin-right: 20rpx;
}

.icon-right {
  color: #999;
  margin-left: auto;
  margin-right: 0;
}

.title {
  font-size: 30rpx;
  color: #333;
}

.admin-entry {
  margin: 40rpx 20rpx;
  padding: 20rpx;
  background: #1296db;
  border-radius: 10rpx;
  text-align: center;
}

.entry-text {
  color: #fff;
  font-size: 30rpx;
}