.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.tab-bar {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
  color: #666;
}

.tab-item.active {
  color: #1296db;
  font-weight: bold;
}

.tab-item .badge {
  position: absolute;
  top: 10rpx;
  right: 50rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-box input {
  background: #fff;
  padding: 20rpx 60rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.search-box .icon-search {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 32rpx;
}

.friend-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.friend-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.friend-item .info {
  flex: 1;
}

.friend-item .nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.friend-item .status {
  font-size: 24rpx;
  color: #999;
}

.friend-item .icon-right {
  color: #999;
  font-size: 32rpx;
}

.request-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.request-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.request-item .info {
  flex: 1;
}

.request-item .nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.request-item .time {
  font-size: 24rpx;
  color: #999;
}

.request-item .actions {
  display: flex;
  gap: 20rpx;
}

.request-item .btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background: #f0f0f0;
  color: #666;
  border: none;
}

.request-item .btn.accept {
  background: #1296db;
  color: #fff;
}

.request-item .btn.reject {
  background: #ff6b6b;
  color: #fff;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}