.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.post-form {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.content-input {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #f0f0f0;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.image-uploader {
  margin-bottom: 30rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
}

.image-item {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  margin: 10rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.delete-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn .iconfont {
  color: #fff;
  font-size: 24rpx;
}

.upload-btn {
  width: 220rpx;
  height: 220rpx;
  margin: 10rpx;
  background: #f5f5f5;
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn .iconfont {
  font-size: 48rpx;
  color: #999;
}

.tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  display: block;
}

.options {
  margin-bottom: 30rpx;
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.label {
  font-size: 28rpx;
  color: #333;
}

.burn-tip {
  font-size: 24rpx;
  color: #ff6b6b;
  padding: 20rpx 0;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
}