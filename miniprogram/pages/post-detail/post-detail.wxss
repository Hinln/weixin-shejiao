.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.post-detail {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 4rpx;
}

.post-status {
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background: #f0f0f0;
}

.post-status.burn {
  background: #ff6b6b;
  color: #fff;
}

.post-content {
  margin-bottom: 30rpx;
}

.text-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.image-list {
  margin-top: 20rpx;
}

.post-image {
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.post-stats {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}

.iconfont {
  font-size: 40rpx;
  color: #999;
  margin-right: 10rpx;
}

.icon-like-filled {
  color: #ff6b6b;
}

.count {
  font-size: 24rpx;
  color: #999;
}

.comment-section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.comment-list {
  margin-bottom: 20rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
}

.comment-nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.empty-comment {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.comment-input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #1296db;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}